<div class="block mx-auto my-12 p-5 bg-white w-1/3 border-gray-200 rounded-5
 shadow-lg text-secondary" style="width: 25rem">
 
    <div>
        <h1 class="text-3x1 font-bold text-center">Registro</h1>
    </div>

    <form action="" method="post" class="mt-4"> 

        <div>

            <input 
            type="email"
            name="email" 
            placeholder="Email"    
            class="text-center form-control  border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white" required>

        </div>

        <div>

            <input type="password" 
            name="password"
            placeholder="Password" 
            class="text-center form-control  border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white" required>

        </div>

        <div>

            <input 
            type="text" 
            name="nombre" 
            placeholder="Nombre" 
            class="text-center form-control  border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white" required>

        </div>

        <div>

            <input 
            type="text" 
            name="apPaterno" 
            placeholder="Apellido paterno" 
            class="text-center form-control  border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white" required>

        </div>

        <div>

            <input type="text" 
            name="apMaterno" 
            placeholder="Apellido materno" 
            class="text-center form-control  border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white" required>

        </div>

        <div>

            <input 
            type="date" 
            name="fechaNacimiento" 
            placeholder="Fecha de nacimiento" 
            class="text-center form-control  border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white" required>

        </div>

        <div>

            <input 
            type="text" 
            name="telefono" 
            placeholder="Telefono" 
            class="text-center form-control  border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white" required>

        </div>

        <div>

            <select 
            type="rol" 
            name="rol"  
            class="text-center form-control  border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-300 focus:bg-white">

                <option hidden selected> Estudiante, Administrador o Personal</option>
                <option>E</option>
                <option>A</option>
                <option>P</option>

            </select required>

        </div>

        <div>

            <button 
            type="submit" 
            class="text-center form-control  border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white">Enviar</button>

        </div>

        {{#if error}}
            <p class="text-red-500 font-bold text-lg my-3 ">{{error}}</p>
        {{/if}}

    </form>
 
 
</div>