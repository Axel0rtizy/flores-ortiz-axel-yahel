<div class="block mx-auto my-10 p-5 bg-white w-1/3 border-gray-200 rounded-5
 shadow-lg text-secondary" style="width: 25rem">

    <div class="border-button">
        <h1 class="text-center fs-1 fw-bold">Login</h1>

    </div>

    <form action="" method="post" class="mt-3"> 

        <div class="input-group mt-3">

            <span class="input-group-text" id="basic-addon1">@</span>
            <input 
            type="email" 
            name="email" 
            placeholder="Email"
            aria-label="Username" 
            aria-describedby="basic-addon1"
            class="form-control"
            class="text-center border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white pointer-border-blue" required >
        
        </div>

        <div class="input-group mt-1" >

            <saan class="input-group-text" id="basic-addon1">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-key" viewBox="0 0 15 16">
                <path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8zm4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5z"/>
                <path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                </svg>
            </saan>

            <input 
            type="password" 
            name="password" 
            placeholder="Password" 
            class="form-control"
            class="text-center border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white" required>

        </div>


        <div>

            <button 
            type="submit" 
            class="text-center form-control border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white">Enviar</button>

        </div>

        {{#if error}}
            <p class="text-red-500 font-bold text-lg my-3 ">{{error}}</p>
        {{/if}}

    </form>
 
 
 </div>